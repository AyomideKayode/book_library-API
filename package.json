{
  "name": "book-library-api",
  "version": "1.0.0",
  "description": "A comprehensive RESTful API for managing a book library system following REST principles and industry best practices",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "seed": "node scripts/seed.js",
    "migrate": "node --trace-warnings scripts/migrate.js",
    "test": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --runInBand",
    "test:watch": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --runInBand --coverage"
  },
  "keywords": [
    "rest",
    "api",
    "book",
    "library",
    "express",
    "nodejs",
    "swagger",
    "openapi"
  ],
  "author": "Book Library Team",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.2.1",
    "helmet": "^4.6.0",
    "mongoose": "^8.16.1",
    "morgan": "^1.10.0",
    "pino": "^10.2.1",
    "pino-http": "^11.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "jest": "^30.2.0",
    "mongodb-memory-server": "^11.0.1",
    "nodemon": "^3.1.10",
    "pino-pretty": "^13.1.3",
    "supertest": "^7.2.2"
  }
}
